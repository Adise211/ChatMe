{
  "name": "chatme",
  "version": "1.0.0",
  "description": "A modern, responsive React chat interface library built with TypeScript, Tailwind CSS, and Radix UI components",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "tsc -p tsconfig.build.json && vite build --mode library && node build-css.js",
    "build:demo": "vite build",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "react",
    "chat",
    "ui",
    "typescript",
    "tailwind",
    "radix-ui",
    "messaging",
    "conversation",
    "component-library"
  ],
  "author": "Adise",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Adise211/chatme.git"
  },
  "homepage": "https://github.com/Adise211/chatme#readme",
  "bugs": {
    "url": "https://github.com/Adise211/chatme/issues"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@radix-ui/react-alert-dialog": {
      "optional": true
    },
    "@radix-ui/react-dialog": {
      "optional": true
    },
    "@radix-ui/react-slot": {
      "optional": true
    },
    "@radix-ui/react-switch": {
      "optional": true
    },
    "class-variance-authority": {
      "optional": true
    },
    "clsx": {
      "optional": true
    },
    "lucide-react": {
      "optional": true
    },
    "tailwind-merge": {
      "optional": true
    },
    "uuid": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "uuid": "^13.0.0",
    "zod": "^4.1.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^27.0.0",
    "tw-animate-css": "^1.3.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
